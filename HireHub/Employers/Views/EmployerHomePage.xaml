<Window x:Class="HireHub.Employers.Views.EmployerHomePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HireHub.Employers.Views"
        mc:Ignorable="d"
        Title="EmployerHomePage" Height="450" Width="800">
    <Grid>
        <Button x:Name="YourJobs" Content="Your Jobs" HorizontalAlignment="Left" Margin="45,26,0,0" VerticalAlignment="Top" Click="Button_Click_1" Background="{x:Null}" BorderBrush="{x:Null}" RenderTransformOrigin="0.247,-0.484"/>
        <Button x:Name="AddJobs" Content="Create New Job" HorizontalAlignment="Left" Margin="122,26,0,0" VerticalAlignment="Top" Click="AddJobs_Click" Background="{x:Null}" BorderBrush="{x:Null}"/>
        <Image x:Name="EmpProfilePhoto" HorizontalAlignment="Left" Height="49" Margin="707,23,0,0" VerticalAlignment="Top" Width="65" Source="/Employers/Views/profileLogo.png" MouseLeftButtonDown="Profile_Click"/>
        <Button x:Name="EmpProfileName" Content="Your Name" HorizontalAlignment="Left" Margin="631,38,0,0" VerticalAlignment="Top" Background="{x:Null}" BorderBrush="{x:Null}" Click="EmpProfileName_Click"/>
    </Grid>
</Window>
